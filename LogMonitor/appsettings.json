{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Async", "Serilog.Sinks.File", "Serilog.Enrichers.EventId" ],
    "Enrich": [ "WithEventIdName" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "DispatcherReport": "Debug",
        "ApiClient": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "bin\\Debug\\work.log",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}/{EventIdName}/{SourceContext}]: {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 2,
          "buffered": false
        }
      }
    ]
  }
}
